<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="me.dawars.sandbox.BezierSplineActivity">

    <me.dawars.sandbox.views.BezierSplineView
        android:id="@+id/activity_bezier_spline_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/linear_layout" />

    <LinearLayout
        android:id="@+id/linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/activity_bezier_spline_res"
        android:layout_alignParentStart="true"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/activity_bezier_spline_check_control"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Control Points" />

        <CheckBox
            android:id="@+id/activity_bezier_spline_check_knot"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Knots" />
    </LinearLayout>

    <SeekBar
        android:id="@+id/activity_bezier_spline_res"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
